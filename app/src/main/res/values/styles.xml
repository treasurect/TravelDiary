<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="loginPopupWindow" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/login_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/login_popup_exit</item>
    </style>
    <style name="leaveMesPopupWindow" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/in_alpha</item>
        <item name="android:windowExitAnimation">@anim/out_alpha</item>
    </style>
    <style name="sharePopupWindow" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/in_right</item>
        <item name="android:windowExitAnimation">@anim/out_right</item>
    </style>
    <style name="morePopupWindow" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/in_top</item>
        <item name="android:windowExitAnimation">@anim/out_top</item>
    </style>
    <style name="Transparent">
        <item name="android:windowBackground">@color/colorFull</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>
