<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/main_share_block"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/main_share_qq"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/ic_qq_logo" />
        <ImageView
            android:id="@+id/main_share_wechat"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/ic_wechat_logo" />
        <ImageView
            android:id="@+id/main_share_wechat_circle"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/ic_wechat_circle_logo" />
        <ImageView
            android:id="@+id/main_share_sina"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/icon_sina_logo" />
    </LinearLayout>
</LinearLayout>