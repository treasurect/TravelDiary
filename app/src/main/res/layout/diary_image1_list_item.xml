<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp">

    <LinearLayout
        android:id="@+id/diary_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/gradient_orange_yellow_radius5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/diary_list_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:placeholderImage="@mipmap/ic_travel_logo" />

            <ImageView
                android:id="@+id/diary_list_state_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/diary_list_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/ic_message" />

            <TextView
                android:id="@+id/diary_list_leave_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorWhite" />
        </FrameLayout>

        <TextView
            android:id="@+id/diary_list_user_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorWhite" />
        <TextView
            android:id="@+id/diary_list_user_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </LinearLayout>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/diary_list_user_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        fresco:placeholderImage="@mipmap/ic_travel_logo"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/diary_list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="295dp"
        android:textColor="@color/colorWhite" />


</FrameLayout>