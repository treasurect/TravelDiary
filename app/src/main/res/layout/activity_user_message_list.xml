<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.treasure.traveldiary.activity.user_center.UserMessageListActivity">

    <include layout="@layout/common_title_bar_view" />

    <ListView
        android:id="@+id/user_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorWhite"
        android:dividerHeight="0dp"
        android:layout_marginTop="50dp" />
    <include layout="@layout/common_nodata_view"/>
    <include layout="@layout/common_loading_view"/>
</FrameLayout>
