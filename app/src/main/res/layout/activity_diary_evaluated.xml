<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.treasure.traveldiary.activity.add.DiaryEvaluatedActivity">

    <include layout="@layout/common_top_view" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/signin_nearby_star_text"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/frame_orange_radius25"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="评分" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/signin_nearby_star1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_star_unclick" />

                <ImageView
                    android:id="@+id/signin_nearby_star2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_star_unclick" />

                <ImageView
                    android:id="@+id/signin_nearby_star3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_star_unclick" />

                <ImageView
                    android:id="@+id/signin_nearby_star4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_star_unclick" />

                <ImageView
                    android:id="@+id/signin_nearby_star5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_star_unclick" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray2" />

            <EditText
                android:id="@+id/signin_nearby_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:hint="来点评或者吐槽一下吧！"
                android:gravity="top"
                android:background="@null" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:background="@drawable/frame_orange_radius25">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_location"/>
                <TextView
                    android:id="@+id/signin_nearby_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/signin_nearby_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorOrange"
            android:dividerHeight="1dp"
            android:background="@color/colorWhite"/>

        <include layout="@layout/common_loading_view" />
    </FrameLayout>

</LinearLayout>
