<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.treasure.traveldiary.activity.main_center.TravellerSearchActivity">

    <include layout="@layout/common_title_bar_view" />
    <FrameLayout
        android:id="@+id/traveller_search_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/traveller_search_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="16dp"
            android:paddingStart="80dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_gravity="bottom"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_travel_logo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
    </FrameLayout>
</LinearLayout>
