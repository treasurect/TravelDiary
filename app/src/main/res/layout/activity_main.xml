<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">
    <include layout="@layout/common_top_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:orientation="vertical">
            <com.baidu.mapapi.map.MapView
                android:id="@+id/home_mapView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorGray6"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main_travel_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:transitionName="traveller">

                <ImageView
                    android:id="@+id/main_travel_image"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/ic_travel_unclick"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </FrameLayout>

            <LinearLayout
                android:id="@+id/main_settings_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:transitionName="settings"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_settings_image"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/ic_setting_unclick"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/pic_map_bg" />
    <RadioGroup
        android:id="@+id/layout_map_type"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:background="@drawable/frame_white_radius25"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp">
        <RadioButton
            android:id="@+id/btn_map_normal"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="普通"
            android:textColor="@color/colorBlock"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/radiobutton_orange"/>
        <RadioButton
            android:id="@+id/btn_map_satellite"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="卫星"
            android:textColor="@color/colorBlock"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/radiobutton_orange"/>
        <RadioButton
            android:id="@+id/btn_map_compass"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="罗盘"
            android:textColor="@color/colorBlock"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/radiobutton_orange"/>
    </RadioGroup>
    <ImageView
        android:id="@+id/user_map_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bottom_gray_radius5"
        android:padding="5dp"
        android:src="@mipmap/ic_loc" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/add_diary_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorFullGray2"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/add_diary_text_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文字"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:id="@+id/add_diary_image_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/add_diary_video_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短视频"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/add_diary_evaluated_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点评/吐槽"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add_diary_text"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_write"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="25dp"
                app:backgroundTint="@color/colorAccent"
                app:rippleColor="@color/colorAccent"
                android:transitionName="diary_text"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_diary_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_camera"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            app:backgroundTint="@color/colorRed"
            app:rippleColor="@color/colorAccent"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_diary_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_video"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            app:backgroundTint="@color/colorYellow"
            app:rippleColor="@color/colorAccent"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_diary_evaluated"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_signin"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            app:backgroundTint="@color/colorCambridgeBlue"
            app:rippleColor="@color/colorAccent"
            android:transitionName="diary_evaluated"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_add_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_add"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@color/colorOrange"
            app:rippleColor="@color/colorAccent"
            app:pressedTranslationZ="20dp"/>
    </FrameLayout>
    <include layout="@layout/common_loading_view"/>
</FrameLayout>
