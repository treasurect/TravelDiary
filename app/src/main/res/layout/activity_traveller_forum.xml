<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.treasure.traveldiary.activity.find_center.TravellerForumActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/common_title_bar_view" />
        <android.support.design.widget.TabLayout
            android:id="@+id/traveller_forum_tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            app:tabSelectedTextColor="@color/colorOrange"
            app:tabTextColor="@color/colorBlock"
            android:background="@color/colorWhite"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            android:layout_gravity="center"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/traveller_forum_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="-5dp"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_forum_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="25dp"
        android:src="@mipmap/ic_add"
        app:backgroundTint="@color/colorOrange"
        app:rippleColor="@color/colorAccent" />
</FrameLayout>
