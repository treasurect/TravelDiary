<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.treasure.traveldiary.activity.traveller.DiaryCenterActivity">
<include layout="@layout/common_top_view"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/diary_center_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:tabSelectedTextColor="@color/colorOrange"
        app:tabTextColor="@color/colorBlock"
        android:background="@color/colorWhite"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/diary_center_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-5dp"/>
</LinearLayout>
