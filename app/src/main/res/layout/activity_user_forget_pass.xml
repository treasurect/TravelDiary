<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_top_view"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:src="@mipmap/ic_travel_logo"
        android:padding="35dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/mine_forgetPass_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_bg"
            android:hint="手机号"
            android:inputType="number"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlock"/>

            <TextView
                android:id="@+id/user_forgetPass_send_message"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/colorBlock"
                android:textSize="18sp"/>
        </LinearLayout>
    </FrameLayout>

    <EditText
        android:id="@+id/mine_forgetPass_verification_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:hint="请输入验证码"
        android:paddingLeft="20dp"/>
    <LinearLayout
        android:id="@+id/mine_forgetPass_next_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <EditText
            android:id="@+id/mine_forgetPass_pass1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:hint="新密码"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/mine_forgetPass_pass2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:hint="确认密码"
            android:paddingLeft="20dp"/>


        <TextView
            android:id="@+id/btn_user_forgetPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/gradient_yellow_orange_radius25"
            android:gravity="center"
            android:text="确认"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_user_forgetPass_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gradient_yellow_orange_radius25"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="20sp"/>
</LinearLayout>